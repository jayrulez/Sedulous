namespace Sedulous.RHI;

/// <summary>
/// Specify the sort order.
/// </summary>
enum SortMode : uint8
{
	/// <summary>
	/// No sorting.
	/// </summary>
	None,
	/// <summary>
	/// Front to back sorting.
	/// </summary>
	FrontToBack,
	/// <summary>
	/// Back to Front sorting.
	/// </summary>
	BackToFront
}
